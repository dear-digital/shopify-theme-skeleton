{{ 'dev__carousel--two-rows.css' | asset_url | stylesheet_tag }}
<!-- Carousel Container -->
<div class="carousel">
  <!-- Carousel Text -->
  <div class="carousel__text">
    <h2 class="carousel__heading">{{ section.settings.heading_text }}</h2>
    <p class="carousel__subheading">{{ section.settings.subheading_text }}</p>
    <div class="carousel__cta-container">
      <a href="{{ section.settings.cta_url }}" class="carousel__cta-link" target="_blank">
        {{- section.settings.cta_text -}}
      </a>
    </div>
  </div>

  <!-- Upper Row Carousel -->
  <div class="carousel__row carousel__row--upper">
    {% for block in section.blocks %}
      {% if block.type == 'upper-image' %}
        <div class="carousel__cell">
          <img
            class="carousel__image"
            src="{{ block.settings.image | image_url: width: 800, height: 800 }}"
            alt="{{ block.settings.image.alt | escape }}"
            loading="eager"
            width="800"
            height="800"
          >
        </div>
      {% endif %}
    {% endfor %}
  </div>

  <!-- Lower Row Carousel -->
  <div class="carousel__row carousel__row--lower">
    {% for block in section.blocks %}
      {% if block.type == 'lower-image' %}
        <div class="carousel__cell">
          <img
            class="carousel__image"
            src="{{ block.settings.image | image_url: width: 800, height: 800 }}"
            alt="{{ block.settings.image.alt | escape }}"
            loading="eager"
            width="800"
            height="800"
          >
        </div>
      {% endif %}
    {% endfor %}
  </div>
</div>

{% schema %}
{
  "name": "Two-Row Carousel",
  "settings": [
    {
      "type": "text",
      "id": "heading_text",
      "label": "Heading Text",
      "default": "MORE THAN 1,25,000"
    },
    {
      "type": "text",
      "id": "subheading_text",
      "label": "Subheading Text",
      "default": "YUMMY GUMMERS"
    },
    {
      "type": "url",
      "id": "cta_url",
      "label": "CTA URL"
    },
    {
      "type": "text",
      "id": "cta_text",
      "label": "CTA Text",
      "default": "@yummygumsvitamins"
    }
  ],
  "blocks": [
    {
      "type": "upper-image",
      "name": "Upper Row Image",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Image for Upper Row"
        }
      ],
      "limit": 15
    },
    {
      "type": "lower-image",
      "name": "Lower Row Image",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Image for Lower Row"
        }
      ],
      "limit": 15
    }
  ],
  "max_blocks": 30,
  "presets": [
    {
      "name": "Two-Row Carousel",
      "category": "Image"
    }
  ]
}
{% endschema %}
