{% if cart.item_count > 0 %}
  <div class="main-container__classes {{ section.settings.main-container__classes }}">
    <div class="cart-container__classes {{ section.settings.cart-container__classes }}">
      <div class="cart-sub-container__classes {{ section.settings.cart-sub-container__classes }}">
        <h1 class="cart-title__classes {{ section.settings.cart-title__classes }}">
          {{ section.settings['cart-title'] }}
        </h1>
        <a
          href="{{ routes.all_products_collection_url }}"
          class="cart-continue-shopping__classes {{ section.settings.cart-continue-shopping__classes }}"
        >
          {{- section.settings['cart-continue-shopping'] -}}
        </a>
      </div>
    </div>

    <div class="form__classes {{ section.settings.form__classes }}">
      <form action="{{ routes.cart_url }}" method="POST" novalidate>
        <table class="table__classes {{  section.settings.table__classes }}">
          <thead>
            <th class="table-product__classes {{ section.settings.table-product__classes }}">{{ section.settings.table-product }}</th>
            <th class="table-quantity__classes {{ section.settings.table-quantity__classes }}">{{ section.settings.table-quantity }}</th>
            <th class="table-total__classes {{ section.settings.table-total__classes }}">{{ section.settings.table-total }}</th>
          </thead>
          <tbody>
            {% for item in cart.items %}
              <tr class="table-row__classes {{ section.settings.table-row__classes }}">
                <td class="table-image__classes {{ section.settings.table-image__classes }}">
                  <a href="{{ item.url }}">
                    {% assign product_image__classes = section.settings.product-image__classes  %}
                    {% if item.image %}
                      {{ item.image | image_url: width: '300' | image_tag: class: product_image__classes }}
                    {% else %}
                      {{ 'product-1' | placeholder_svg_tag: product_image__classes }}
                    {% endif %}
                  </a>
                </td>
                <td class="table-details__classes {{ section.settings.table-details__classes }} py-4 px-2 flex flex-col justify-center">
                  <a href="{{ item.url }}" class="table-product-title__classes {{ section.settings.table-product-title__classes }} my-1">{{ item.product.title | truncatewords: 5 }}</a>
                  <span class="table-variant-title__classes {{ section.settings.table-variant-title__classes }} text-sm text-gray-500 my-1">{{ item.variant.title }}</span>
                  <a
                    href="{{ routes.cart_change_url }}?line={{ forloop.index }}&quantity=0"
                    class="table-remove__classes {{ section.settings.table-remove__classes }} text-sm font-medium text-red-500 my-1"
                    >{{ section.settings.table-remove }}</a
                  >
                </td>
                <td class="table-item-quantity__classes {{  section.settings.table-item-quantity__classes }} py-4 px-2">
                  <input
                    type="number"
                    name="updates[]"
                    value="{{ item.quantity }}"
                    min="1"
                    id="updates_{{ forloop.index }}"
                    class="table-item__classes {{  section.settings.table-item__classes }} w-20 border p-2"
                  >
                </td>
                <td class="table-item-price__classes {{ section.settings.table-item-price__classes }} py-4 px-2">
                  {{ item.line_price | money }}
                </td>
              </tr>
            {% endfor %}
          </tbody>
        </table>

        <div class="flex flex-col md:flex-row items-center justify-between">
          <div class="w-full my-4">
            <div class="flex flex-col items-start">
              <label for="cart_notes" class="my-1">{{ section.settings.cart-notes-title }}</label>
              <textarea name="note" id="cart_notes" class="w-full md:max-w-lg resize-none border h-20"></textarea>
            </div>
          </div>
          <div class="w-full my-4 md:w-80">
            <h3 class="text-xl">{{ section.settings.subtotal-text }} {{ cart.total_price | money }}</h3>

            <div class="my-2">
              <button
                type="submit"
                name="update"
                class="w-full p-3 border border-gray-600 text-gray-600 font-medium hover:bg-gray-600 hover:text-white"
              >
                {{ section.settings.update-button }}
              </button>
            </div>
            <div class="my-2">
              <button
                type="submit"
                name="checkout"
                class="w-full p-3 border border-gray-600 text-gray-600 font-medium hover:bg-gray-600 hover:text-white"
              >
                {{ section.settings.checkout-button }}
              </button>
            </div>
          </div>
        </div>
      </form>
    </div>
  </div>
{% else %}
  <div class="max-w-6xl h-60 my-4 mx-auto flex items-center justify-center">
    <div class="text-center">
      <h1 class="text-3xl my-4">Your cart is empty</h1>
      <div class="my-4 py-4">
        <a
          href="{{ routes.all_products_collection_url }}"
          class="border border-gray-600 text-white bg-gray-600 px-8 py-3"
          >Continue shopping</a
        >
      </div>
    </div>
  </div>
{% endif %}

{% schema %}
{
  "name": "Template Cart",
  "settings": [
    {
      "type": "text",
      "id": "cart-title",
      "label": "Cart Title",
      "default": "Your Cart"
    },
    {
      "type": "text",
      "id": "cart-continue-shopping",
      "label": "Cart Continue Shopping",
      "default": "Continue Shopping"
    },
    {
      "type": "text",
      "id": "table-product",
      "label": "Table Product Text",
      "default": "Product"
    },
    {
      "type": "text",
      "id": "table-quantity",
      "label": "Table Quantity Text",
      "default": "Quantity"
    },
    {
      "type": "text",
      "id": "table-total",
      "label": "Table Total Text",
      "default": "Total Price"
    },
    {
      "type": "text",
      "id": "table-remove",
      "label": "Remove Text",
      "default": "remove"
    },
    {
      "type": "text",
      "id": "cart-notes-text",
      "label": "Cart Notes Text",
      "default": "Cart notes"
    },
    {
      "type": "text",
      "id": "subtotal-text",
      "label": "Subtotal Text",
      "default": "Subtotal: "
    },
    {
      "type": "text",
      "id": "update-button",
      "label": "Update Button Text",
      "default": "Update"
    },
    {
      "type": "text",
      "id": "checkout-button",
      "label": "Checkout Button Text",
      "default": "Checkout"
    },
    {
      "type": "header",
      "content": "Apply Tailwind CSS Classes (If Needed)",
      "info": "Note: Insert classes with space between them."
    },
    {
      "type": "textarea",
      "label": "Main Container Classes",
      "id": "main-container__classes",
      "default": "p-4"
    },
    {
      "type": "textarea",
      "label": "Cart Container Classes",
      "id": "cart-container__classes",
      "default": "max-w-6xl flex flex-col my-10 mx-auto"
    },
    {
      "type": "textarea",
      "label": "Cart Sub Container Classes",
      "id": "cart-sub-container__classes",
      "default": "flex items-end justify-between my-5"
    },
    {
      "type": "textarea",
      "label": "Cart Title Classes",
      "id": "cart-title__classes",
      "default": "text-3xl"
    },
    {
      "type": "textarea",
      "label": "Cart Continue Shopping Classes",
      "id": "cart-continue-shopping__classes",
      "default": "text-blue-600 hover:text-blue-800 font-medium underline"
    },
    {
      "type": "header",
      "content": "Table Content"
    },
    {
      "type": "textarea",
      "label": "Form Classes",
      "id": "form__classes",
      "default": "max-w-6xl flex flex-col my-10 mx-auto"
    },
    {
      "type": "textarea",
      "label": "Table Classes",
      "id": "table__classes",
      "default": "table-auto divide-y divide-gray-200 my-4 w-full"
    },
    {
      "type": "textarea",
      "label": "Table Product Classes",
      "id": "table-product__classes",
      "default": "px-6 py-3 text-left text-sm font-medium text-gray-500"
    },
    {
      "type": "textarea",
      "label": "Table Quantity Classes",
      "id": "table-quantity__classes",
      "default": "px-6 py-3 text-left text-sm font-medium text-gray-500"
    },
    {
      "type": "textarea",
      "label": "Table Total Classes",
      "id": "table-total__classes",
      "default": "px-6 py-3 text-left text-sm font-medium text-gray-500"
    },
    {
      "type": "textarea",
      "label": "Table Row Classes",
      "id": "table-row__classes",
      "default": "table-row"
    },
    {
      "type": "textarea",
      "label": "Table Image Classes",
      "id": "table-image__classes",
      "default": "py-4 px-2 flex flex-col justify-center"
    },
    {
      "type": "textarea",
      "label": "Product Image Classes",
      "id": "product-image__classes",
      "default": "w-20 h-20 object-cover border"
    }
  ],
  "blocks": [
    {
      "type": "subtotal",
      "name": "Subtotal",
      "limit": 1
    },
    {
      "type": "update_button",
      "name": "Update Button",
      "limit": 1
    },
    {
      "type": "checkout_button",
      "name": "Checkout Button",
      "limit": 1
    }
  ]
}
{% endschema %}
