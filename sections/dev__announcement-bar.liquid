<div class="announcement" {{ block.shopify_attributes }}>
  <div class="announcement__wrapper rel">
    <div
      class="announcement__content"
      role="region"
      aria-label="{{ 'sections.header.announcement' | t }}"
      data-duration="{{ section.settings.animation_duration | times: 1000 }}"
    >
      {% for block in section.blocks %}
        {%- if block.settings.text != blank -%}
          <div class="announcement__item {% if forloop.first %}slide-in{% endif %}">
            {%- if block.settings.link != blank -%}
              <a href="{{ block.settings.link }}" class="announcement__link">
            {%- endif -%}
            <p class="announcement__message">
              <span>{{ block.settings.text | escape }}</span>
            </p>
            {%- if block.settings.link != blank -%}
              </a>
            {%- endif -%}
          </div>
        {%- endif -%}
      {% endfor %}
    </div>
  </div>
</div>

{% schema %}
{
  "name": "Announcement Bar",
  "class": "shopify-announcement",
  "settings": [
    {
      "type": "range",
      "id": "animation_duration",
      "label": "Animation duration",
      "min": 0,
      "max": 10,
      "step": 1,
      "default": 4,
      "unit": "s"
    }
  ],
  "blocks": [
    {
      "name": "Text",
      "type": "text",
      "settings": [
        {
          "type": "text",
          "id": "text",
          "label": "Text",
          "placeholder": "Text"
        },
        {
          "type": "url",
          "id": "link",
          "label": "Link"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Announcement Bar"
    }
  ]
}
{% endschema %}

