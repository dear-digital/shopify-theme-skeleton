{%- assign section_name = section.settings.section_name -%}
{{ 'cards.css' | asset_url | stylesheet_tag }}

<div class="section-container">
  <h2 class="section-title">{{ section.settings.section_title }}</h2> 

  <div class="{{ section_name }}">
    {% for i in (1..3) %}
      {%- assign card_title = section.settings["card#{i}_title"] -%}
      {%- assign card_detail = section.settings["card#{i}_detail"] -%}
      {%- assign card_image = section.settings["card#{i}_image"] -%}
      {%- assign card_button_link = section.settings["card#{i}_button_link"] -%}

      <a href="{{ card_button_link }}" class="card-link">
        <div class="card">
          <img src="{{ card_image | default: 'https://example.com/placeholder-image.jpg' }}" alt="{{ card_title }}" loading="lazy">
          <h3>{{ card_title }}</h3>
          <p>{{ card_detail }}</p>
          <a href="{{ card_button_link }}" class="btn">Shop Now</a>
        </div>
      </a>
    {% endfor %}
  </div>
</div>

